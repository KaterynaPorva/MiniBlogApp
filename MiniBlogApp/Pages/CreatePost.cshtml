@page
@model MiniBlogApp.Pages.CreatePostModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Створення поста";
}

<style>
    body {
        background-color: #5C4033; 
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .form-container {
        max-width: 500px;
        margin: 100px auto; 
        background-color: #ffffff;
        padding: 30px;
        border-radius: 20px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        color: #333;
    }

    h2 {
        text-align: center;
        margin-bottom: 30px;
    }

    .links {
        text-align: center;
        margin-bottom: 20px;
    }

        .links a {
            color: #5C4033;
            text-decoration: none;
            font-weight: bold;
            margin: 0 10px;
        }

            .links a:hover {
                text-decoration: underline;
            }

    label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }

    input[type="text"],
    textarea {
        width: 100%;
        padding: 10px 20px;
        margin-bottom: 20px;
        border: 1px solid #ccc;
        border-radius: 25px;
        box-sizing: border-box;
        font-size: 16px;
    }

    textarea {
        resize: vertical;
    }

    .btn-submit {
        background-color: #f5f5dc; 
        color: #333;
        border: none;
        padding: 10px 20px;
        border-radius: 25px;
        width: 100%;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s;
        font-size: 16px;
    }

        .btn-submit:hover {
            background-color: #e0dcb5; 
        }

    .validation-message {
        color: red;
        margin-top: -15px;
        margin-bottom: 15px;
        display: block;
    }
</style>

<div class="form-container">
    <h2>Створити новий пост</h2>

    <div class="links">
        <a href="/Index">⬅ На головну</a>
        <a href="/MyPosts">Мої пости</a>
    </div>

    <form method="post">
        <div>
            <label>Заголовок:</label>
            <input type="text" asp-for="Title" />
            <span asp-validation-for="Title" class="validation-message"></span>
        </div>

        <div>
            <label>Текст:</label>
            <textarea asp-for="PostContent" rows="6"></textarea>
            <span asp-validation-for="PostContent" class="validation-message"></span>
        </div>

        <button type="submit" class="btn-submit">Опублікувати</button>
    </form>

    @if (!ModelState.IsValid)
    {
        <p class="validation-message">@ModelState.Values.SelectMany(v => v.Errors).FirstOrDefault()?.ErrorMessage</p>
    }
</div>
