@page
@model MiniBlogApp.Pages.LogsModel
@{
    ViewData["Title"] = "Лог дій";
}

<h2>Лог дій користувачів</h2>

<a href="/Index">⬅ На головну</a>

<form method="post" asp-page-handler="ClearLogs" style="margin-top:10px;">
    <button type="submit">🗑 Очистити журнал</button>
</form>

@if (TempData["Message"] != null)
{
    <p style="color:green">@TempData["Message"]</p>
}

@if (!Model.Logs.Any())
{
    <p>Немає жодної дії.</p>
}
else
{
    <ul>
        @foreach (var log in Model.Logs)
        {
            <li>@log.GetMessage()</li>
        }
    </ul>
}
