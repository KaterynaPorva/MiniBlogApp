@page
@model MiniBlogApp.Pages.IndexModel
@{
    ViewData["Title"] = "Головна";
}

<h2>Усі пости</h2>

@if (string.IsNullOrEmpty(Model.Username))
{
    <p><a href="/Login">Увійти</a></p>
}
else
{
    <p>Привіт, @Model.Username! | <a href="/MyPosts">Мої пости</a> | <a href="/CreatePost">Створити пост</a></p>
    <form method="post" asp-page-handler="Logout" style="display:inline;">
        <button type="submit" style="background:none; border:none; color:blue; cursor:pointer; padding:0;">Вийти</button>
    </form>
}

@if (!Model.AllPosts.Any())
{
    <p>Постів поки немає.</p>
}
else
{
    @foreach (var post in Model.AllPosts)
    {
        <div style="border:1px solid #ccc; margin:10px; padding:10px;">
            <h3>@post.Title</h3>
            <p>@post.Content</p>
            <small>
                Автор: @post.Author |
                Створено: @post.CreatedAt.ToString("dd.MM.yyyy HH:mm")
            </small><br />
            <b>Лайків:</b> @post.Likes.Count <br />
            <b>Коментарів:</b> @post.Comments.Count <br />
            <a href="/ViewPost?id=@post.Id">Переглянути</a>
        </div>
    }
}
