<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MiniBlogApp</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MiniBlogApp.styles.css" asp-append-version="true" />

    <style>
        body {
            background-color: #5C4033; /* темно-коричневий фон */
            color: #333;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        header {
            background-color: #f5f5dc; /* молочний */
            box-shadow: 0 2px 6px rgba(0,0,0,0.2);
            text-align: center;
            padding: 15px 0;
            font-size: 24px;
            font-weight: bold;
            color: #5C4033;
        }

        main {
            flex: 1;
            background-color: #ffffff;
            border-radius: 16px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.15);
            padding: 30px;
            max-width: 900px;
            margin: 40px auto;
        }

        footer {
            background-color: #f5f5dc;
            color: #5C4033;
            text-align: center;
            padding: 10px 0;
            font-size: 14px;
            border-top: 1px solid #ccc;
        }

            footer a {
                color: #5C4033;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>

<body>
    <header>
        MiniBlogApp
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        © 2025 - MiniBlogApp - <a asp-page="/Privacy">Privacy</a>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
